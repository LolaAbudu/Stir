<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/profile_cardView_itemView"
    android:layout_width="350dp"
    android:layout_height="200dp"
    android:layout_gravity="center"
    android:layout_marginTop="10dp"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="5dp"
    app:cardElevation="10dp">

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/profile_imageView_itemView"
            android:layout_gravity="center"
            android:layout_width="350dp"
            android:layout_height="180dp"
            android:layout_centerInParent="true"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/stir_name_logo_color" />

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/profile_coffee_bean_image_itemView"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/coffee_bean" />

            <TextView
                android:id="@+id/profile_coffee_bean_count_itemView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:hint="@string/profile_coffee_bean_count"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/profile_image_date_itemView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="200dp"
                android:hint="06-18-19"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>